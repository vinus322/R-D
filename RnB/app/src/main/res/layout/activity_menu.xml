<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".page.menu"
    android:focusable="true"
    android:background="@drawable/menu_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:gravity="right|center_vertical"
        >

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/btn_mypage"
            android:layout_marginTop="89dp"
            android:background="@drawable/btn_mypage_orig"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="MyPageButtonClicked" />

        <Button
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:id="@+id/btn_myemotion"
            android:layout_below="@+id/btn_mypage"
            android:background="@drawable/btn_myemotion_orig"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="MyEmotionButtonClicked" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/btn_myrobot"
            android:background="@drawable/btn_myrobot_orig"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_mymusic"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="MyRobotButtonClicked" />


        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/btn_mymusic"
            android:background="@drawable/btn_mymusic_orig"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_myemotion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="MyMusicButtonClicked" />


        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/btn_mystory"
            android:background="@drawable/btn_mystory_orig"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_myrobot"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="MyStoryButtonClicked" />



    </LinearLayout>

</RelativeLayout>
